<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with app title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:background="#E3F2FD"
            android:padding="16dp" />

        <!-- Add Overtime Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_overtime"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:gravity="start" />

        <!-- Date Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/date"
                android:textSize="16sp"
                android:gravity="start" />

            <Button
                android:id="@+id/dateButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="בחר תאריך"
                android:textSize="14sp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Hours Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hours"
                android:textSize="16sp"
                android:gravity="start" />

            <EditText
                android:id="@+id/hoursInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="number"
                android:hint="0"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:maxLength="2" />

        </LinearLayout>

        <!-- Minutes Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/minutes"
                android:textSize="16sp"
                android:gravity="start" />

            <EditText
                android:id="@+id/minutesInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="number"
                android:hint="0"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:maxLength="2" />

        </LinearLayout>

        <!-- Notes Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notes"
                android:textSize="16sp"
                android:gravity="start"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/notesInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="הערות (אופציונלי)"
                android:gravity="start|top"
                android:minLines="2"
                android:maxLines="4" />

        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/white" />

        <!-- Monthly Summary Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/monthly_summary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:gravity="start" />

        <!-- Summary Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <!-- Total Hours -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/total_hours"
                    android:textSize="14sp"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/totalHoursText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.0 שעות"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="end" />

            </LinearLayout>

            <!-- Required Hours -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/required_hours"
                    android:textSize="14sp"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/requiredHoursText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="20.0 שעות"
                    android:textSize="14sp"
                    android:gravity="end" />

            </LinearLayout>

            <!-- Balance -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/balance"
                    android:textSize="14sp"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/balanceText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-20.0 שעות"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Recent Entries List -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="רשומות אחרונות"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:gravity="start" />

        <ListView
            android:id="@+id/entriesList"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#FAFAFA"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />

    </LinearLayout>

</ScrollView>